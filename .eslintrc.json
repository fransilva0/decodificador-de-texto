{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
      "space-before-function-paren": "off",
      "no-console": "warn",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "jsx-quotes": [
        "error",
        "prefer-double"
      ]
    }
}
